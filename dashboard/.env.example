# MemoryRouter Dashboard Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# APP CONFIG
# =============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# GOOGLE OAUTH
# Setup: https://console.cloud.google.com/apis/credentials
# =============================================================================

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your-client-secret

# =============================================================================
# GITHUB OAUTH
# Setup: https://github.com/settings/developers
# =============================================================================

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# JWT SESSION
# Generate: openssl rand -base64 32
# =============================================================================

JWT_SECRET=your-jwt-secret-at-least-32-characters-long

# =============================================================================
# ENCRYPTION KEY (for provider API keys)
# Generate: openssl rand -hex 32
# =============================================================================

ENCRYPTION_KEY=your-64-character-hex-encryption-key

# =============================================================================
# WORKERS API
# =============================================================================

MEMORYROUTER_API_URL=https://api.memoryrouter.ai
MEMORYROUTER_INTERNAL_KEY=your-shared-secret-for-workers-api

# =============================================================================
# STRIPE
# Get keys: https://dashboard.stripe.com/apikeys
# =============================================================================

STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# =============================================================================
# RESEND (EMAIL)
# Get key: https://resend.com/api-keys
# =============================================================================

RESEND_API_KEY=re_xxx
